<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <!--face部分-->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior=".practice.behavior.BackgroundBehavior">

        <ImageView
            android:id="@+id/iv_face"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:scaleType="centerCrop"
            android:src="@drawable/pink_bg"
            android:tag="iv_face"
            android:translationY="-12dp" />

        <View
            android:id="@+id/v_mask"
            android:layout_width="match_parent"
            android:layout_height="500dp" />
    </FrameLayout>
    <!--face部分-->

    <!--TopBar部分-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_top_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_behavior=".practice.behavior.TopBarBehavior">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginBottom="0dp"
            android:scaleType="center"
            android:src="@drawable/btn_black_back"
            app:layout_constraintBottom_toBottomOf="@+id/tv_top_bar_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_top_bar_name" />

        <TextView
            android:id="@+id/tv_top_bar_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="林俊杰"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_back" />

        <com.liyihuanx.myjetpack.practice.DrawableLeftTextView
            android:id="@+id/tv_top_bar_coll"
            android:layout_width="72dp"
            android:layout_height="24dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/bg_fd3f70_r30"
            android:drawablePadding="4dp"
            android:gravity="center_vertical"
            android:text="收藏"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_top_bar_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_top_bar_name" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <!--TopBar部分-->

    <!--TitleBar部分-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cls_title_bar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:layout_behavior=".practice.behavior.TitleBarBehavior">

        <TextView
            android:id="@+id/tv_cls_content_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="林俊杰"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.liyihuanx.myjetpack.practice.DrawableLeftTextView
            android:layout_width="72dp"
            android:layout_height="32dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/bg_fd3f70_r30"
            android:drawablePadding="4dp"
            android:gravity="center_vertical"
            android:text="收藏"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_cls_content_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_cls_content_name" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <!--TitleBar部分-->

    <!--Content部分-->
    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:translationY="280dp"
        app:layout_behavior=".practice.behavior.ContentBehavior">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/collapsingRv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <!--Content部分-->
</androidx.coordinatorlayout.widget.CoordinatorLayout>